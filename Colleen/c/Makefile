YELLOW="\033[01;33m"
GREEN="\033[01;32m"
CYAN="\033[01;36m"
NOCOLOR="\033[01;0m"

NAME=Colleen
SRC=Colleen.c

CFLAGS=-Wall -Werror -Wextra

all: $(NAME)

$(NAME):
	@printf $(CYAN)
	@printf "ðŸ”¨ Compiling $(NAME) ðŸ”¨\n"
	@printf $(YELLOW)
	clang $(CFLAGS) -o $(NAME) $(SRC)
	@printf $(GREEN)
	@printf "âœ… $(NAME) compiled! âœ…\n\n"
	@printf $(NOCOLOR)

clean:
	@printf $(CYAN)
	@printf "ðŸ§¹ Cleaning miscellaneous files ðŸ§¹\n"
	@printf $(YELLOW)
	/bin/rm -f Colleen_bis.c
	/bin/rm -f diff
	@printf $(GREEN)
	@printf "âœ… $(NAME) removed! âœ…\n\n"
	@printf $(NOCOLOR)

fclean: clean
	@printf $(CYAN)
	@printf "ðŸ§¹ Removing $(NAME) ðŸ§¹\n"
	@printf $(YELLOW)
	/bin/rm -f $(NAME)
	@printf $(GREEN)
	@printf "âœ… $(NAME) removed! âœ…\n\n"
	@printf $(NOCOLOR)

re: fclean all

evaluate: re
	@printf $(CYAN)
	@printf "â³ Executing tests on $(NAME) â³\n"
	@printf $(YELLOW)
	- ./$(NAME) > Colleen_bis.c
	- diff $(SRC) Colleen_bis.c > diff
	cat -e diff
	@printf $(GREEN)
	@printf "âœ… $(NAME) tests executed! âœ…\n\n"
	@printf $(NOCOLOR)

.PHONY: all clean fclean re evaluate
